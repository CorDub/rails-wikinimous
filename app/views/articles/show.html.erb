<div class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-between">
  <h1>Wikinimous</h1>
  <%= link_to "New Article", :new_article, class: "btn btn-primary" %>
</div>
<h1><%= @article.title %></h1>
<p><%= @article.content %></p>
<%= link_to edit_article_path(@article.id) do %>
  <i class="fa-solid fa-pencil"></i>
<% end %>
<%= link_to article_path(@article.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  do %>
  <i class="fa-solid fa-trash"></i>
<% end %>
